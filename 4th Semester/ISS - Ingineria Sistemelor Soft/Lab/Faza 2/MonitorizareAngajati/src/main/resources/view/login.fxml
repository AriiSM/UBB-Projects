<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="526.0" prefWidth="604.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.monitorizareangajati.controler.LoginControler">
    <Pane prefHeight="526.0" prefWidth="604.0" style="-fx-background-color: linear-gradient(to bottom right, #1B4D3E, #2C3531);" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <!-- Patratul mare -->
        <Pane layoutX="125.0" layoutY="80.0" prefHeight="219.0" prefWidth="350.0" style="-fx-background-color: rgba(45, 79, 75, 0.6); -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: innershadow(three-pass-box, rgba(0,0,0,0.5), 10, 0, 0, 0);">
            <!-- TextField pentru Nume+Prenume -->
            <TextField fx:id="tb_username" alignment="CENTER" layoutX="50.0" layoutY="40.0" prefHeight="30.0" prefWidth="250.0" promptText="Username" />
            <!-- PasswordField pentru Parola -->
            <PasswordField fx:id="tb_parola" alignment="CENTER" layoutX="50.0" layoutY="90.0" prefHeight="30.0" prefWidth="250.0" promptText="Parola" />
        </Pane>
        <!-- Dreptunghiul sub patrat -->
        <Pane layoutX="175.0" layoutY="299.0" prefHeight="45.0" prefWidth="250.0" style="-fx-background-color: rgba(45, 79, 75, 0.6); -fx-background-radius: 10; -fx-border-radius: 10;">
            <!-- Buton pentru Login -->
            <Button fx:id="btn_login" layoutX="70.0" layoutY="4.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="42.0" prefWidth="111.0" style="-fx-text-fill: rgba(255,255,255,0.7); -fx-background-color: transparent;" text="Login">
                <font>
                    <Font size="19.0" />
                </font>
            </Button>
        </Pane>
        <Button layoutX="552.0" layoutY="500.0" mnemonicParsing="false" onAction="#handleClose" style="-fx-background-color: transparent;" text="Close" textFill="WHITE" />
    </Pane>
</AnchorPane>
